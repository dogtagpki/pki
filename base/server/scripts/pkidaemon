# The following variables are referenced in the sourced script
# /usr/share/pki/scripts/operations, to the error is invalid

# shellcheck disable=SC2034
PROG_NAME=`basename $0`
SERVICE_NAME="pkidaemon"
SERVICE_PROG="/bin/systemctl"

command="$1"
pki_instance_type="tomcat"
pki_instance_id="$2"

PKI_REGISTRY="/etc/sysconfig/pki/${pki_instance_type}"
PKI_TYPE="${pki_instance_type}"
PKI_SYSTEMD_TARGET="pki-${pki_instance_type}d"

# Source the PKI function library
. /usr/share/pki/scripts/operations

print_usage()
{
    echo
    usage
    echo "where valid instance names include:"
    list_instances
    exit ${default_error}
}

# See how we were called.
case $command in
    status)
        registry_status
        exit $?
        ;;
    start)
        start
        exit $?
        ;;
    stop)
        echo "invalid action ($command)"
        print_usage
        ;;
    restart)
        echo "invalid action ($command)"
        print_usage
        ;;
    *)
        echo "unknown action ($command)"
        echo
        usage
        echo "where valid instance names include:"
        list_instances
        exit ${default_error}
        ;;
esac

