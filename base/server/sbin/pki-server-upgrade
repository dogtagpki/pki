# load default, system-wide, and user-specific PKI configuration and
# set NSS_DEFAULT_DB_TYPE.
. /usr/share/pki/scripts/config

echo "WARNING: The pki-server-upgrade has been deprecated. Use pki-server upgrade instead."
${PYTHON_EXECUTABLE} -I -m pki.server.pkiserver upgrade "$@"

exit $?
