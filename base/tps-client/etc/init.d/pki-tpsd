# pki-tpsd         Startup script for the Apache HTTP pki-tps Server
#
# chkconfig:    - 87 13
# description:  Token Processing System (Apache)
# processname:  pki-tpsd
# piddir:       /var/run/pki/tps
# config:       ${PKI_INSTANCE_PATH}/conf/httpd.conf

export PROG_NAME=`basename $0`
export SERVICE_NAME="pki-tpsd"
export SERVICE_PROG="/sbin/service"
export PKI_PATH="/usr/share/pki/tps"
export PKI_REGISTRY="/etc/sysconfig/pki/tps"
export PKI_TYPE="pki-tps"
export PKI_TOTAL_PORTS=3

# Avoid using 'systemctl' for now
SYSTEMCTL_SKIP_REDIRECT=1
export SYSTEMCTL_SKIP_REDIRECT

# Disallow 'others' the ability to 'write' to new files
umask 00002

command="$1"
export pki_instance="$2"

# Source function library.
. /etc/init.d/functions

# Source the PKI function library
. /usr/share/pki/scripts/functions

# See how we were called.
case $command in
    status)
	registry_status
	exit $?
	;;
    start)
	start
	exit $?
	;;
    restart)
	restart
	exit $?
	;;
    stop)
	stop
	exit $?
	;;
    condrestart|force-restart|try-restart)
        [ ! -f ${lockfile} ] || restart
        exit $?
        ;;
    reload)
        echo "The 'reload' action is an unimplemented feature."
        exit ${default_error}
        ;;
    *)
	echo "unknown action ($command)"
        usage
        echo "where valid instance names include:"
        list_instances
        exit ${default_error}
        ;;
esac

